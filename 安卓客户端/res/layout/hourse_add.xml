<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical" >

<include layout="@layout/title" />

<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="wrap_content">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">
	<TableLayout
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="房屋名称：" 
				android:id="@+id/TV_hourseName"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_hourseName" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="所在楼盘：" 
				android:id="@+id/TV_buildingObj"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_buildingObj" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="房屋图片：" 
				android:id="@+id/TV_housePhoto"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<ImageView android:id="@+id/iv_housePhoto" 
				android:layout_width="0dp"
				android:layout_height="240dp" 
				android:layout_weight="4"
				android:src="@drawable/noimage" 
				android:layout_marginRight="5dp"/>
		</TableRow>
		<TableRow android:layout_marginTop="5dp">
			<Button 
				android:text="拍照"
				android:id="@+id/btn_housePhoto"
				android:layout_span="2"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:textColor="@color/hint_color" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="房屋类型：" 
				android:id="@+id/TV_hourseTypeObj"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_hourseTypeObj" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="价格范围：" 
				android:id="@+id/TV_priceRangeObj"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<Spinner 
				android:id="@+id/Spinner_priceRangeObj" 
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:layout_marginRight="5dp"/>
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="面积：" 
				android:id="@+id/TV_area"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_area" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="租金(元/月)：" 
				android:id="@+id/TV_price"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText
				android:text=""
				android:id="@+id/ET_price"
				android:inputType="numberDecimal" 
				android:layout_width="0dp" 
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:ellipsize="end"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="楼层/总楼层：" 
				android:id="@+id/TV_louceng"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_louceng" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="装修：" 
				android:id="@+id/TV_zhuangxiu"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_zhuangxiu" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="朝向：" 
				android:id="@+id/TV_caoxiang"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_caoxiang" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="建筑年代：" 
				android:id="@+id/TV_madeYear"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_madeYear" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="联系人：" 
				android:id="@+id/TV_connectPerson"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_connectPerson" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="联系电话：" 
				android:id="@+id/TV_connectPhone"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_connectPhone" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="详细信息：" 
				android:id="@+id/TV_detail"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_detail" 
				android:layout_width="0dp"
				android:layout_height="200dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="5dp"
				android:ellipsize="end"
				android:gravity="top"
				android:inputType="textMultiLine"
				android:singleLine="false"
				android:scrollHorizontally="false"
				android:layout_marginRight="5dp" />
		</TableRow>

		<TableRow android:layout_marginTop="5dp">
			<TextView 
				android:text="地址：" 
				android:id="@+id/TV_address"
				android:layout_width="0dp" 
				android:layout_height="wrap_content"
				android:layout_weight="1.5"
				android:textColor="@color/hint_color" />
			<EditText 
				android:text="" 
				android:id="@+id/ET_address" 
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="4"
				android:layout_marginTop="5dip"
				android:background="@drawable/btn_item_medium_default"
				android:drawableLeft="@drawable/ic_user_pwd"
				android:drawablePadding="10dp"
				android:gravity="center_vertical"
				android:paddingLeft="4dp"
				android:layout_marginRight="5dp"
				android:singleLine="true" />
		</TableRow>

	</TableLayout>
	<LinearLayout 
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="80dp" 
		android:gravity="center">
		   <Button 
				android:text="添加" 
				android:id="@+id/BtnAdd"
 				android:layout_width="match_parent"
				android:layout_height="48dp"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:layout_marginTop="5dip"
				android:background="#D64F4D"
				android:textColor="@color/white" /> 
	</LinearLayout> 
  </LinearLayout>
</ScrollView>
</LinearLayout>

